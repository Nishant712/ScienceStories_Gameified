<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_dim"
    tools:context="com.example.newapp.Prompt"
    tools:deviceIds="wear_square"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:text="@string/first_prompt"
        android:gravity="left"
        android:textColor="#FFFFFF"
        android:scrollHorizontally="false"
        android:textSize="22.5dp"
        android:textStyle="bold"
        android:visibility="visible" />

    <Button
        android:padding="10dp"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text=""
        android:textAllCaps="false"
        android:id="@+id/dismiss"
        android:background="@drawable/record_cancel"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="7.5dp"
        android:onClick="anotherPrompt"/>

    <Button
        android:padding="10dp"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text=""
        android:textAllCaps="false"
        android:id="@+id/nextScreen"
        android:onClick="initialBird"
        android:background="@drawable/prompt_select"
        android:layout_alignParentRight="true"
        android:layout_marginTop="130dp"
        android:layout_marginRight="7.5dp" />

</RelativeLayout>
